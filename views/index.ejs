<% include head %>
<div class="container">
<div class="alert alert-warning" role="alert" id="wrong_div" style="display:none">
      Something wrong! Please try again!
</div>
<div class="col-md-8 col-sm-8" style="padding-left: 0px;padding-right: 0px">
<div class="col-md-12" style="padding-left: 0px;padding-right: 0px">
	<p class="col-md-4" id="select_date" style="font-size:20px;margin-left:10px;">2016-12-10</p>
	<div align="right">
	<button type="button" class="btn btn-default" data-toggle="modal" data-target="#newScheduleModal" style="margin-bottom: 5px">
		new
	</button></div>
	<!-- Modal -->
	<div class="modal fade" id="newScheduleModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					<h4 class="modal-title" id="myModalLabel">NEW SCHEDULE</h4>
				</div>
				<div class="modal-body">
					<label>Title</label>
					<input type="text" class="form-control" id="new_schedule_title" placeholder="title">
					<label>Description</label>
					<textarea class="form-control" id="new_schedule_description" placeholder="description"></textarea>
					<label>Start</label>
					<input type="time" class="form-control" id="new_schedule_start_time" value="00:00">
					<label>End</label>
					<input type="time" class="form-control" id="new_schedule_end_time" value="00:00">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary" data-dismiss="modal" onclick="createSchedule()">Save</button>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="col-sm-2 col-md-2" style="padding-left: 0px;padding-right: 0px">
	<button class="col-md-12 btn time-head-div">Time</button>
