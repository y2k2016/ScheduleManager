<div class="col-sm-10 col-md-10" id="day_schedule" style="padding-left: 0px;padding-right: 0px">
	<button class="col-md-12 btn time-head-div">schedule</button>
</div>
<div class="col-sm-5 col-md-5" id="friend_day_schedule" style="padding-left: 0px;padding-right: 0px;display:none">
	<div class="col-md-12 time-head-div">friend schedule</div>
</div>
</div>

<div class="col-md-4" style="padding-left: 0px;padding-right: 0px">

<div id="calendar" style="padding-left: 0px;padding-right: 0px"></div>
<div class="col-md-12" style="padding-left: 0px;padding-top:20px">
<label>Find friend</label>
<select class="form-control" id="systemType"><option value="ScheduleManager1">ScheduleManager1</option><option value="ScheduleManager2">ScheduleManager2</option></select>
<select class="form-control" id="serviceType"><option value="restful">restful</option><option value="soap">soap</option></select>
<input type="text" class="form-control" id="friend_name" placeholder="name">
<button type="button" class="btn btn-default" onclick="findFriendSchedules()">find</button>
